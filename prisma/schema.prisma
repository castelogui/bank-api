// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Usuário do sistema
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  cpfCnpj   String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account?
}

// Conta bancária vinculada a um usuário
model Account {
  id        String   @id @default(uuid())
  userId    String      @unique
  balance   Float    @default(0.0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user                    User          @relation(fields: [userId], references: [id])
  transactionsOrigin      Transaction[] @relation("transactionsOrigin")
  transactionsDestination Transaction[] @relation("transactionsDestination")
}

// Transações (depósitos, saques, transferências)
model Transaction {
  id                   String          @id @default(uuid())
  originAccountID      String? // conta de origem (null se for depósito inicial, por exemplo)
  destinationAccountID String? // conta de destino
  amount               Float
  type                 TransactionType
  createdAt            DateTime        @default(now())

  origin      Account? @relation("transactionsOrigin", fields: [originAccountID], references: [id])
  destination Account? @relation("transactionsDestination", fields: [destinationAccountID], references: [id])
}

// Tipos de transação
enum TransactionType {
  DEPOSIT
  WITHDRAW
  TRANSFER
}
